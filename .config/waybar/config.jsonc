{
// sourced from header module //

"layer": "top",
"position": "top",
"mod": "dock",
"height": 10,
"exclusive": true,
"passthrough": false,
"gtk-layer-shell": true,
"width": 0,
"margin-top": 0,



// positions generated based on config.ctl //

	"modules-left": ["custom/padd","custom/padd",
    "hyprland/workspaces","custom/padd"],
	"modules-center": ["custom/padd","custom/padd","custom/padd"],
	"modules-right": ["custom/updates","power-profiles-daemon","cpu","memory","temperature","network","bluetooth","custom/bluetooth-interaction","pulseaudio","battery","idle_inhibitor","clock","custom/power"],


// sourced from modules based on config.ctl //

"custom/weather": {
    "exec": "python ~/.config/waybar/scripts/Weather.py",
    "restart-interval": 300,
    "return-type": "json",
},  
"custom/launcher": {
    "format": "▦",
    "on-click": "rofi -show drun &",
},

"cpu": {
    "format": " {usage}% ",
    "tooltip": true
},

//this is not working for me either

"cava": {
    //        "cava_config": "$XDG_CONFIG_HOME/cava/cava.conf",
    "framerate": 60,
    "autosens": 1,
    "sensitivity": 2,
    "bars": 20,
    "lower_cutoff_freq": 50,
    "higher_cutoff_freq": 10000,
    "method": "pulse",
    "source": "auto",
    "stereo": true,
    "reverse": false,
    "bar_delimiter": 0,
    "monstercat": false,
    "waves": false,
    "noise_reduction": 0.77,
    "input_delay": 2,
    "format-icons" : ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█" ],
    "actions": {
        "on-click-right": "mode",
    "gravity": 200

    }
},

"custom/cpuinfo": {
    "exec": " /home/ralphie/.config/waybar/scripts/cpuinfo.sh",
    "return-type": "json",
    "format": "{}",
    "rotate": 0,
    "interval": 5, // once every 5 seconds
    "tooltip": true,
    "max-length": 1000
},

"memory": {
    "states": {
        "c": 90, // critical
        "h": 60, // high
        "m": 30, // medium
    },
    "interval": 10,
    "format": "󰾆 {used}GB",
    "rotate": 0,
    "format-m": "󰾅 {used}GB",
    "format-h": "󰓅 {used}GB",
    "format-c": " {used}GB",
    "format-alt": "󰾆 {percentage}%",
    "max-length": 10,
    "tooltip": true,
    "tooltip-format": "󰾆 {percentage}%\n {used:0.1f}GB/{total:0.1f}GB"
},

//use this if it is not working on your device


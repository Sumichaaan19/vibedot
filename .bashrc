export CLICOLOR=2
alias ls='ls --color=auto'

get_box_info() {
    echo -ne "\[\033[0;1;38;5;68m\033[30;48;5;68m\] \u \[\033[0m\]\
\[\033[0;1;38;5;87m\033[30;48;5;87m\] \h \[\033[0m\]\
\[\033[0;1;38;5;141m\033[30;48;5;141m\] \d \[\033[0m\]\
\[\033[0;1;38;5;141m\033[30;48;5;141m\] \@ \[\033[0m\]"
}

get_box_path() {
    local dir="${PWD/#$HOME/~/}"
    echo -ne "\[\033[0;1;38;5;51m\033[30;48;5;51m\] $dir \[\033[0m\]"
}

PROMPT_COMMAND='PS1="\n\[\033[0;1;38;5;51m\]╭─ $(get_box_info)\n\
\[\033[0;1;38;5;51m\]│─ $(get_box_path)\n\
\[\033[0;1;38;5;51m\]│\n\
\[\033[0;1;38;5;51m\]╰─⮞ \[\033[0m\]"'
